# File name: comicscreenmanager.kv
#:kivy 1.7.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<TuringScreenManager>:
    transition: FadeTransition()
    new_machine: _new_machine
    load_machine: _load_machine
    HomeScreenWidget:
    Screen:
        name: 'titlescreen'
        Button:
            id: _new_machine
            text: "Create new TM"
            pos_hint: {'center_x': 0.5, 'y': .60}
            size_hint: None, None
            size: 150, 50
            on_press: root.newTM('', '', [], '', '')
        Button:
            id: _load_machine
            text: "Return"
            pos_hint: {'center_x': 0.5, 'y': .30}
            size_hint: None, None
            size: 150, 50
            on_press: root.current = 'turingscreen'
        Button:
            id: _x_machine
            text: "Screen 2"
            pos_hint: {'center_x': 0.5, 'y': .10}
            size_hint: None, None
            size: 150, 50
            on_press: root.current = 'enter_blank'
    TuringCreator:
    Screen:
        name: 'enter_blank'
        canvas:
            Color:
                rgb: (0.4, 0.3, 0.4)
            # Rectangle:
            #     pos: self.pos
            #     size: self.size
        TextInput:
            id: tape_input
            font_size: 20
            # center_x: root.width/2
            # height: 50
            # width: 300
            text: 'Enter Tape'
        Label:
            id: tape_display
            font_size: 20
            text: tape_input.text
        Label:
            font_size: 60
            # center_x: root.width / 2
            top: root.top - 50
            text: "New Turing Test"
        Button:
            id: create_New_Turing_Machine
            on_touch_down: create_New_Turing_Machine.text = "Yieew, pressed down"
            on_touch_up: create_New_Turing_Machine.text = "This is still a test button"
            # on_press: root.printSomething()
            font_size: 10
            center_x: root.width * 2 / 6
            top: root.top - root.height/2
            text: "This is a test Button"
            background_color: [0.3,0.5,0.7,1]
        Button:
            font_size: 10
            pos_hint: {'center_x': 0.5, 'y': .10}
            size_hint: None, None
            size: 150, 50
            # center_x: root.width * 1 / 6
            # top: root.top - root.height/2
            text: "Create a new Turing Machine"
            background_color: [0.3,0.5,0.7,1]
            on_press: root.createTuringMachine()
